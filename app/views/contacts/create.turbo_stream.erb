<%# 1. Prepend the newly created voice to the top of the #voices list %>
<%= turbo_stream.prepend "contacts", @contact %>

<%# 2. Update the flash messages container with the success notice %>
<%= turbo_stream.update "flash_messages", partial: "shared/flash" %>

<%= turbo_stream.update "new_contact_form" do %>
  <%= render "form", contact: Contact.new %>
<% end %>

<%# 4. Write the custom turbo-stream tag directly as plain HTML %>
<turbo-stream action="dispatch_event" name="dialog:close"></turbo-stream>
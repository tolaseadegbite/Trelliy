<%= form_with(model: event, html: { contents: true }) do |form| %>
  <% if event.errors.any? %>
    <div class="alert alert--negative flex flex-col gap-half mbe-4" role="alert">
      <h2 class="font-medium leading-none"><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul class="text-sm mis-3" style="list-style: disc">
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :name, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :name, class: "input" %>
  </div>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :starts_at, class: "text-sm font-medium leading-none" %>
    <%= form.datetime_field :starts_at, class: "input" %>
  </div>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :duration_in_minutes, class: "text-sm font-medium leading-none" %>
    <%= form.number_field :duration_in_minutes, class: "input" %>
  </div>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :contact_ids, "Invite Contacts (optional)", class: "text-sm font-medium leading-none" %>
    <%= form.collection_select(
      :contact_ids,
      current_user.contacts.order(:first_name),
      :id,
      :full_name,
      {},
      {
        multiple: true,
        class: "i-full",
        data: { controller: "combobox" }
      }
    ) %>
    <p class="text-xs text-gray-500">Hold Ctrl (or Cmd on Mac) to select multiple people.</p>
  </div>


  <div class="inline-flex items-center mbs-2 mie-1 i-full">
    <%= form.submit class: "btn btn--primary i-full" %>
  </div>
<% end %>

<div class="pbe-3 border-be border-main last:border-be-0">
  <%# --- Event Details --- %>
  <%= link_to invitation.event, class: "block pbe-3" do %>
    <div class="flex items-center justify-between">
      <div class="flex-col min-i-0">
        <p class="font-medium text-link overflow-ellipsis"><%= invitation.event.name %></p>
        <p class="text-sm text-subtle"><%= invitation.event.starts_at.strftime("%B %d, %Y") %></p>
        <% if invitation.notes.present? %>
          <p class="text-sm text-subtle mbs-1"><span class="font-semibold">Invitation Note: </span><%= invitation.notes %></p>
        <% end %>
      </div>
      <span class="badge badge--<%= invitation.status %> text-sm capitalize shrink-0 mis-2">
        <%= invitation.status %>
      </span>
    </div>
  <% end %>

  <%# --- Nested Interaction Logs for this Invitation --- %>
  <%# We access the logs through the follow_up_tasks, which were eager-loaded %>
  <% if invitation.interaction_logs.any? %>
    <div class="pis-4">
      <h4 class="text-sm font-medium mbe-2 text-subtle">Follow-up Notes</h4>
      <div class="flex flex-col gap-y-3">
        <%# Loop through each follow-up task to display its logs %>
        <% invitation.follow_up_tasks.each do |task| %>
          <% task.interaction_logs.each do |log| %>
            <div>
              <p class="text-sm mbe-1 break-words"><%= log.note %></p>
              <p class="text-xs text-subtle">
                Logged on <%= log.created_at.strftime("%B %d, %Y") %>
              </p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>